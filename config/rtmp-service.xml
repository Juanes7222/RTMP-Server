<service>
  <id>RTMP-Server</id>
  <name>RTMP Server</name>
  <description>Servidor RTMP para transmisiones de video - Se comunica con el Dashboard Server</description>
  <executable>node</executable>
  <arguments>server.js</arguments>
  <workingdirectory>C:\RTMP</workingdirectory>
  <logpath>C:\RTMP\logs</logpath>
  <log mode="roll-by-size">
    <sizeThreshold>10240</sizeThreshold>
    <keepFiles>8</keepFiles>
  </log>
  <onfailure action="restart" delay="10 sec"/>
  <onfailure action="restart" delay="20 sec"/>
  <resetfailure>1 hour</resetfailure>
  <depend>RTMP-Dashboard</depend>
  <env name="RUNNING_AS_SERVICE" value="true"/>
</service>
